<h1>Listing user_responses</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Response</th>
      <th>Award</th>
      <th>Question instance</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_responses.each do |user_response| %>
      <tr>
        <td><%= user_response.response %></td>
        <td><%= user_response.award %></td>
        <td><%= user_response.question_instance.id %></td>
        <td><%= user_response.user.username %></td>
        <td><%= link_to 'Show', user_response %></td>
        <td><%= link_to 'Edit', edit_user_response_path(user_response) %></td>
        <td><%= link_to 'Destroy', user_response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

