<h1>Listing responses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Questioninstance</th>
      <th>Response</th>
      <th>Award</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.user %></td>
        <td><%= response.questioninstance %></td>
        <td><%= response.response %></td>
        <td><%= response.award %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Edit', edit_response_path(response) %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_response_path %>
