<h1>Listing admin_difficulties</h1>

<table>
  <thead>
    <tr>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_difficulties.each do |admin_difficulty| %>
      <tr>
        <td><%= admin_difficulty.points %></td>
        <td><%= link_to 'Show', admin_difficulty %></td>
        <td><%= link_to 'Edit', edit_admin_difficulty_path(admin_difficulty) %></td>
        <td><%= link_to 'Destroy', admin_difficulty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Difficulty', new_admin_difficulty_path %>
