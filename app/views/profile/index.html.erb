<% if current_user %>
<h2> <%= (current_user.username).capitalize %>'s Profile </h2>
<% end %>

<% if current_user %>

<% userResponses = getUserResponses %>

<div class="row">
    <div class="col-md-6">
    <h3> Overall Statistics </h3>    
    Correct Responses: <%= UserResponse.where("user_id =" + current_user.id.to_s).where("award > 0").count %> <br/>
    Total Responses: <%= UserResponse.where("user_id =" + current_user.id.to_s).count %> <br/>
    Total Questions: <%= countUniqueQuestions %>
    </div>
<div class="col-md-6">
    <h3> Percent Correct </h3>
    <div class="c100 p<%= percentage_correct %>">
    <span><%= percentage_correct %>%</span>
    <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
    </div>
</div>
</div>


</div>
<h3> Your Responses </h3>
<div id="user_responses" class="container">
    <div class="row">
        <div class="col-md-4">Question</div>
        <div class="col-md-4">Response</div>
        <div class="col-md-4">Points Achieved</div>
    </div>
    <% userResponses[:responses].each do |user_response| %>
    <div class="row">
        <div class="col-md-4"><%= user_response.question_instance.question.question %></div>
        <div class="col-md-4"><%= user_response.response %></div>
        <div class="col-md-4"><%= user_response.award %></div>
    </div>
    <% end %>  
</div>
<% end %>
