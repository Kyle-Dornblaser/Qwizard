<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Question type</th>
      <th>Question</th>
      <th>Attempts</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td>
          <%= question.question_type == 1 ? "Multiple Choice" : ""  %>
          <%= question.question_type == 2 ? "Multiple Select" : "" %>
          <%= question.question_type == 3 ? "Short Answer" : ""%>
        </td>
        <td><%= question.question %></td>
        <td><%= question.attempts %></td>
        <td><%= question.difficulty.id %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

